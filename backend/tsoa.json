{
    "entryFile": "src/app.ts",
    "controllerPathGlobs": ["src/http/controllers/*.ts"],

    "spec": {
        "outputDirectory": "src/generated",
        "specVersion": 3,
        "securityDefinitions": {
            "cookieAuth": {
                "type": "apiKey",
                "in": "cookie",
                "name": "accessToken"
            },
            "optionalCookieAuth": {
                "type": "apiKey",
                "in": "cookie",
                "name": "accessToken"
            }
        }
    },

    "routes": {
        "routesDir": "src/generated",
        "authenticationModule": "src/http/tsoa/authentication.ts"
    }
}
